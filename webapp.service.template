[Unit]
Description=My app

[Service]
ExecStart={home_dir}/WebApp/load.sh -w -p
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin:{home_dir}/.nvm/versions/node/v11.3.0/bin:/usr/local/bin:/usr/bin:/bin
Environment=NODE_ENV=production
WorkingDirectory={home_dir}//WebApp

[Install]
WantedBy=multi-user.target
