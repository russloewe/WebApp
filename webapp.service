[Unit]
Description=My app

[Service]
ExecStart=/home/sysadmin/WebApp/load.sh -w -p
Restart=always
User=nobody
# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/home/sysadmin/WebApp

[Install]
WantedBy=multi-user.target
